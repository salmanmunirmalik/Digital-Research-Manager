{
  "name": "digital-research-manager",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon --exec tsx server/index.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc --project server/tsconfig.json",
    "build:all": "npm run build:frontend && npm run build:backend",
    "start": "node dist/server/index.js",
    "deploy:check": "npm run build:all && npm run start",
    "clean": "rm -rf dist node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "db:seed": "tsx database/seed.ts",
    "db:migrate": "tsx database/migrate.ts",
    "db:reset": "psql -d digital_research_manager -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public;\" && npm run db:seed"
  },
  "dependencies": {
    "@google/genai": "^1.13.0",
    "@supabase/supabase-js": "^2.54.0",
    "@types/bcrypt": "^6.0.0",
    "@types/pg": "^8.15.5",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.4.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.14.0",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tsx": "^4.6.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
