{
  "name": "digital-research-manager",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon --exec tsx server/index.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc --project server/tsconfig.json",
    "build:all": "npm run build:frontend && npm run build:backend",
    "start": "node dist/server/index.js",
    "start:prod": "NODE_ENV=production node dist/server/index.js",
    "deploy:check": "npm run build:all && npm run start",
    "deploy:render": "npm run build:all",
    "clean": "rm -rf dist node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "db:seed": "tsx database/seed.ts",
    "db:migrate": "tsx database/migrate.ts",
    "db:reset": "psql -d digital_research_manager -c \"DROP SCHEMA public CASCADE; CREATE SCHEMA public;\" && npm run db:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test:ci && npm run test:e2e",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint:check && npm run type-check && npm run test:ci",
    "fix-ports": "chmod +x scripts/fix-ports.sh && ./scripts/fix-ports.sh",
    "setup-db": "chmod +x scripts/setup-database.sh && ./scripts/setup-database.sh",
    "dev:clean": "npm run fix-ports && npm run dev",
    "analyze:bundle": "npm run build && open dist/bundle-analysis.html",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:cache": "node tests/performance/cache-test.js",
    "monitor:memory": "node scripts/monitor-memory.js",
    "optimize:images": "node scripts/optimize-images.js"
  },
  "dependencies": {
    "@google/genai": "^1.13.0",
    "@heroicons/react": "^2.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/pg": "^8.15.5",
    "@types/redis": "^4.0.11",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "redis": "^4.6.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "sharp": "^0.33.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^3.4.17",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.14.0",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "artillery": "^2.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.3",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^5.9.2",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "supertest": "^6.3.4",
    "tsx": "^4.6.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
