import React, { useState, useEffect, useMemo } from 'react';
import {
  SearchIcon,
  FilterIcon,
  NewspaperIcon,
  StarIcon,
  GlobeIcon,
  EyeIcon,
  HeartIcon,
  CheckCircleIcon,
  ClockIcon,
  TagIcon,
  TrendingUpIcon,
  CurrencyDollarIcon,
  DocumentTextIcon,
  AcademicCapIcon,
  ShieldCheckIcon
} from '../components/icons';

interface Publisher {
  id: string;
  name: string;
  short_name: string;
  country: string;
  website: string;
  is_open_access: boolean;
}

interface JournalCategory {
  id: string;
  name: string;
  description: string;
  color: string;
  icon: string;
}

interface Journal {
  id: string;
  publisher_id: string;
  title: string;
  abbreviation: string;
  issn_print: string;
  issn_online: string;
  description: string;
  impact_factor: number;
  impact_factor_year: number;
  h_index: number;
  total_citations: number;
  sjmr_quartile: number;
  open_access_option: boolean;
  fully_open_access: boolean;
  article_processing_charge: number;
  apc_currency: string;
  average_review_time: number;
  acceptance_rate: number;
  website: string;
  language: string;
  status: string;
  publisher?: Publisher;
  categories: string[];
}

const JournalsDirectoryPage: React.FC = () => {
  const [journals, setJournals] = useState<Journal[]>([]);
  const [publishers, setPublishers] = useState<Publisher[]>([]);
  const [categories, setCategories] = useState<JournalCategory[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  
  // Search and filters
  const [searchTerm, setSearchTerm] = useState('');
  const [selectedCategory, setSelectedCategory] = useState<string>('all');
  const [ifMin, setIfMin] = useState<number>(0);
  const [ifMax, setIfMax] = useState<number>(100);
  const [quartileFilter, setQuartileFilter] = useState<string>('all');
  const [accessFilter, setAccessFilter] = useState<string>('all');
  const [countryFilter, setCountryFilter] = useState<string>('all');
  const [sortBy, setSortBy] = useState<string>('impact_factor');
  
  useEffect(() => {
    fetchData();
  }, []);

  const fetchData = async () => {
    try {
      setLoading(true);
      
      // Mock data for demonstration
      const mockJournals: Journal[] = [
        {
          id: '1',
          publisher_id: '1',
          title: 'Nature',
          abbreviation: 'Nature',
          issn_print: '0028-0836',
          issn_online: '1476-4687',
          description: 'International weekly journal covering all aspects of science and technology',
          impact_factor: 69.504,
          impact_factor_year: 2023,
          h_index: 945,
          total_citations: 2850000,
          sjmr_quartile: 1,
          open_access_option: false,
          fully_open_access: false,
          article_processing_charge: 0,
          apc_currency: 'USD',
          average_review_time: 21,
          acceptance_rate: 8.5,
          website: 'https://www.nature.com/nature',
          language: 'English',
          status: 'active',
          categories: ['Biology']
        },
        {
          id: '2',
          publisher_id: '2',
          title: 'PLOS ONE',
          abbreviation: 'PLOS ONE',
          issn_print: '1932-6203',
          issn_online: '1932-6203',
          description: 'Open access peer-reviewed scientific journal covering all disciplines',
          impact_factor: 3.752,
          impact_factor_year: 2023,
          h_index: 485,
          total_citations: 1200000,
          sjmr_quartile: 2,
          open_access_option: true,
          fully_open_access: true,
          article_processing_charge: 1350,
          apc_currency: 'USD',
          average_review_time: 18,
          acceptance_rate: 67.2,
          website: 'https://journals.plos.org/plosone',
          language: 'English',
          status: 'active',
          categories: ['Biology']
        },
        {
          id: '3',
          publisher_id: '3',
          title: 'Cell',
          abbreviation: 'Cell',
          issn_print: '0092-8674',
          issn_online: '1097-4172',
          description: 'Leading journal in cell biology and molecular biology',
          impact_factor: 66.850,
          impact_factor_year: 2023,
          h_index: 920,
          total_citations: 2600000,
          sjmr_quartile: 1,
          open_access_option: false,
          fully_open_access: false,
          article_processing_charge: 0,
          apc_currency: 'USD',
          average_review_time: 25,
          acceptance_rate: 12.3,
          website: 'https://www.cell.com',
          language: 'English',
          status: 'active',
          categories: ['Cell Biology']
        },
        {
          id: '4',
          publisher_id: '4',
          title: 'BMC Biology',
          abbreviation: 'BMC Biol',
          issn_print: '1741-7007',
          issn_online: '1741-7007',
          description: 'Open access journal covering biology and life sciences',
          impact_factor: 6.527,
          impact_factor_year: 2023,
          h_index: 167,
          total_citations: 92000,
          sjmr_quartile: 1,
          open_access_option: true,
          fully_open_access: true,
          article_processing_charge: 1990,
          apc_currency: 'USD',
          average_review_time: 22,
          acceptance_rate: 42.8,
          website: 'https://bmcbiology.biomedcentral.com',
          language: 'English',
          status: 'active',
          categories: ['Biology']
        }
      ];

      const mockPublishers: Publisher[] = [
        { id: '1', name: 'Nature Publishing Group', short_name: 'NPG', country: 'United Kingdom', website: 'https://www.nature.com', is_open_access: false },
        { id: '2', name: 'PLOS', short_name: 'PLOS', country: 'United States', website: 'https://journals.plos.org', is_open_access: true },
        { id: '3', name: 'Elsevier', short_name: 'Elsevier', country: 'Netherlands', website: 'https://www.elsevier.com', is_open_access: false },
        { id: '4', name: 'BioMed Central', short_name: 'BMC', country: 'United Kingdom', website: 'https://www.biomedcentral.com', is_open_access: true }
      ];

      const mockCategories: JournalCategory[] = [
        { id: '1', name: 'Biology', description: 'General and specialized biology journals', color: '#4CAF50', icon: 'DnaIcon' },
        { id: '2', name: 'Biochemistry', description: 'Molecular biochemistry and enzymology', color: '#2196F3', icon: 'FlaskIcon' },
        { id: '3', name: 'Cell Biology', description: 'Cellular processes and mechanisms', color: '#FF9800', icon: 'MicroscopeIcon' },
        { id: '4', name: 'Medicine', description: 'Clinical medicine and translational research', color: '#F44336', icon: 'HeartIcon' },
        { id: '5', name: 'Neuroscience', description: 'Brain and nervous system research', color: '#607D8B', icon: 'BrainCircuitIcon' },
        { id: '6', name: 'Immunology', description: 'Immune system and disorders', color: '#795548', icon: 'ShieldCheckIcon' }
      ];

      setJournals(mockJournals);
      setPublishers(mockPublishers);
      setCategories(mockCategories);
      setLoading(false);
    } catch (err) {
      setError('Failed to load journals data');
      setLoading(false);
    }
  };

  const filteredJournals = useMemo(() => {
    return journals.filter(journal => {
      const matchesSearch = searchTerm === '' || 
        journal.title.toLowerCase().includes(searchTerm.toLowerCase()) ||
        journal.abbreviation.toLowerCase().includes(searchTerm.toLowerCase()) ||
        journal.description.toLowerCase().includes(searchTerm.toLowerCase());
      
      const matchesCategory = selectedCategory === 'all' || journal.categories.includes(selectedCategory);
      const matchesIF = journal.impact_factor >= ifMin && journal.impact_factor <= ifMax;
      const matchesQuartile = quartileFilter === 'all' || journal.sjmr_quartile.toString() === quartileFilter;
      const matchesAccess = accessFilter === 'all' || 
        (accessFilter === 'open' && journal.fully_open_access) ||
        (accessFilter === 'hybrid' && journal.open_access_option && !journal.fully_open_access) ||
        (accessFilter === 'closed' && !journal.open_access_option);
      
      const publisher = publishers.find(p => p.id === journal.publisher_id);
      const matchesCountry = countryFilter === 'all' || publisher?.country === countryFilter;

      return matchesSearch && matchesCategory && matchesIF && matchesQuartile && matchesAccess && matchesCountry;
    }).sort((a, b) => {
      switch (sortBy) {
        case 'impact_factor':
          return b.impact_factor - a.impact_factor;
        case 'h_index':
          return b.h_index - a.h_index;
        case 'citations':
          return b.total_citations - a.total_citations;
        case 'title':
          return a.title.localeCompare(b.title);
        case 'apc_low':
          return a.article_processing_charge - b.article_processing_charge;
        case 'review_time':
          return a.average_review_time - b.average_review_time;
        default:
          return 0;
      }
    });
  }, [journals, publishers, searchTerm, selectedCategory, ifMin, ifMax, quartileFilter, accessFilter, countryFilter, sortBy]);

  const countries = useMemo(() => {
    return Array.from(new Set(publishers.map(p => p.country))).sort();
  }, [publishers]);

  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="animate-spin rounded-full h-32 w-32 border-b-2 border-emerald-500"></div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="text-center">
          <CheckCircleIcon className="mx-auto h-12 w-12 text-red-500 mb-4" />
          <p className="text-red-600 mb-4">{error}</p>
          <button 
            onClick={fetchData}
            className="bg-emerald-600 text-white px-4 py-2 rounded-md hover:bg-emerald-700"
          >
            Try Again
          </button>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50/30 to-indigo-50/20">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* Header */}
        <div className="text-center mb-12">
          <div className="flex items-center justify-center space-x-3 mb-6">
            <div className="w-16 h-16 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 rounded-2xl flex items-center justify-center shadow-xl">
              <NewspaperIcon className="w-8 h-8 text-white" />
            </div>
            <div>
              <h1 className="text-4xl font-bold bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent">
                Scientific Journals Directory
              </h1>
              <p className="text-xl text-gray-600 mt-2">Discover and explore research publications across all disciplines</p>
            </div>
          </div>
          
          {/* Quick Stats */}
          <div className="flex justify-center space-x-8 text-sm text-gray-500 mb-6">
            <div className="flex items-center space-x-2">
              <NewspaperIcon className="w-5 h-5" />
              <span>{journals.length} Journals</span>
            </div>
            <div className="flex items-center space-x-2">
              <AcademicCapIcon className="w-5 h-5" />
              <span>All Disciplines</span>
            </div>
            <div className="flex items-center space-x-2">
              <ShieldCheckIcon className="w-5 h-5" />
              <span>Peer Reviewed</span>
            </div>
            <div className="flex items-center space-x-2">
              <TrendingUpIcon className="w-5 h-5" />
              <span>Impact Factors</span>
            </div>
          </div>
        </div>

        {/* Main Interface */}
        <div className="bg-white/80 backdrop-blur-sm rounded-3xl shadow-2xl border border-white/20 p-8 mb-8">
          <div className="flex flex-col lg:flex-row gap-8">
            {/* Filters Sidebar */}
            <div className="lg:w-80 flex-shrink-0">
              <div className="bg-gradient-to-br from-white/90 to-blue-50/50 rounded-2xl shadow-lg border border-blue-100/50 p-6">
                <h3 className="text-xl font-bold text-gray-900 mb-6 flex items-center">
                  <FilterIcon className="h-6 w-6 mr-3 text-blue-600" />
                  Search & Filters
                </h3>
              
              <div className="space-y-6">
                  {/* Search */}
                  <div>
                    <label className="block text-sm font-semibold text-gray-700 mb-3">
                      Search Journals
                    </label>
                    <div className="relative">
                      <SearchIcon className="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-blue-500" />
                      <input
                        type="text"
                        value={searchTerm}
                        onChange={(e) => setSearchTerm(e.target.value)}
                        className="w-full pl-10 pr-4 py-3 border-2 border-blue-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white/80 backdrop-blur-sm text-gray-900 placeholder-gray-500 transition-all duration-200"
                        placeholder="Search journal name or abbreviation..."
                      />
                    </div>
                  </div>

                {/* Category Filter */}
                <div>
                  <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Subject Area
                  </label>
                  <select
                    value={selectedCategory}
                    onChange={(e) => setSelectedCategory(e.target.value)}
                    className="w-full p-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                  >
                    <option value="all">All Subjects</option>
                    {categories.map(category => (
                      <option key={category.id} value={category.name}>{category.name}</option>
                    ))}
                  </select>
                </div>

                {/* Impact Factor Range */}
                <div>
                  <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Impact Factor: {ifMin} - {ifMax}
                  </label>
                  <div className="space-y-2">
                    <input
                      type="range"
                      min="0"
                      max="100"
                      step="1"
                      value={ifMin}
                      onChange={(e) => setIfMin(Number(e.target.value))}
                      className="w-full"
                    />
                    <input
                      type="range"
                      min="0"
                      max="100"
                      step="1"
                      value={ifMax}
                      onChange={(e) => setIfMax(Number(e.target.value))}
                      className="w-full"
                    />
                  </div>
                </div>

                {/* SJMR Quartile */}
                <div>
                  <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    SJMR Quartile
                  </label>
                  <select
                    value={quartileFilter}
                    onChange={(e) => setQuartileFilter(e.target.value)}
                    className="w-full p-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                  >
                    <option value="all">All Quartiles</option>
                    <option value="1">Q1 (Top 25%)</option>
                    <option value="2">Q2</option>
                    <option value="3">Q3</option>
                    <option value="4">Q4</option>
                  </select>
                </div>

                {/* Open Access */}
                <div>
                  <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Open Access
                  </label>
                  <select
                    value={accessFilter}
                    onChange={(e) => setAccessFilter(e.target.value)}
                    className="w-full p-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                  >
                    <option value="all">All Access Types</option>
                    <option value="open">Fully Open Access</option>
                    <option value="hybrid">Hybrid Journals</option>
                    <option value="closed">Subscription Only</option>
                  </select>
                </div>

                {/* Country */}
                <div>
                  <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Publisher Country
                  </label>
                  <select
                    value={countryFilter}
                    onChange={(e) => setCountryFilter(e.target.value)}
                    className="w-full p-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-side-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                  >
                    <option value="all">All Countries</option>
                    {countries.map(country => (
                      <option key={country} value={country}>{country}</option>
                    ))}
                  </select>
                </div>
              </div>
            </div>
          </div>

          {/* Main Content */}
          <div className="flex-1">
            {/* Sort Options */}
            <div className="mb-6 flex items-center justify-between">
              <h2 className="text-lg font-semibold text-gray-900 dark:text-white">
                Scientific Journals
              </h2>
              
              <select
                value={sortBy}
                onChange={(e) => setSortBy(e.target.value)}
                className="p-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
              >
                <option value="impact_factor">Impact Factor (High to Low)</option>
                <option value="h_index">H-Index (High to Low)</option>
                <option value="citations">Total Citations (High to Low)</option>
                <option value="title">Journal Name (A-Z)</option>
                <option value="apc_low">APC (Low to High)</option>
                <option value="review_time">Review Time (Fast to Slow)</option>
              </select>
            </div>

            {/* Journals Grid */}
            <div className="space-y-4">
              {filteredJournals.map(journal => (
                <JournalCard key={journal.id} journal={journal} publishers={publishers} categories={categories} />
              ))}
            </div>

            {/* Empty State */}
            {filteredJournals.length === 0 && (
              <div className="text-center py-12">
                <NewspaperIcon className="mx-auto h-12 w-12 text-gray-400 mb-4" />
                <h3 className="text-lg font-medium text-gray-900 dark:text-white mb-2">
                  No journals found
                </h3>
                <p className="text-gray-500 dark:text-gray-400">
                  Try adjusting your search criteria or filters
                </p>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  );
};

// Journal Card Component
const JournalCard: React.FC<{ journal: Journal; publishers: Publisher[]; categories: JournalCategory[] }> = ({ journal, publishers, categories }) => {
  const [isFavorited, setIsFavorited] = useState(false);

  const publisher = publishers.find(p => p.id === journal.publisher_id);
  const categoryColor = categories.find(c => c.name === journal.categories[0])?.color || '#6B7280';

  return (
    <div className="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 hover:shadow-md transition-shadow">
      <div className="flex items-start justify-between">
        <div className="flex-1">
          <div className="flex items-start justify-between mb-3">
            <div>
              <h3 className="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                {journal.title}
              </h3>
              <p className="text-sm text-gray-600 dark:text-gray-300 mb-2">
                {journal.abbreviation} ({journal.issn_print})
              </p>
              <p className="text-sm text-gray-600 dark:text-gray-300">
                <span className="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900 dark:text-emerald-200">
                  {journal.categories.join(', ')}
                </span>
              </p>
            </div>
            <button
              onClick={() => setIsFavorited(!isFavorited)}
              className="text-gray-400 hover:text-red-500 transition-colors ml-4"
            >
              <HeartIcon className={`h-5 w-5 ${isFavorited ? 'fill-red-500 text-red-500' : ''}`} />
            </button>
          </div>

          <p className="text-sm text-gray-700 dark:text-gray-300 mb-4">
            {journal.description}
          </p>

          {/* Metrics Grid */}
          <div className="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
            <div className="text-center">
              <div className="text-lg font-semibold text-emerald-600 dark:text-emerald-400">
                {journal.impact_factor}
              </div>
              <div className="text-xs text-gray-500 dark:text-gray-400">
                Impact Factor ({journal.impact_factor_year})
              </div>
            </div>
            <div className="text-center">
              <div className="text-lg font-semibold text-blue-600 dark:text-blue-400">
                {journal.h_index}
              </div>
              <div className="text-xs text-gray-500 dark:text-gray-400">
                H-Index
              </div>
            </div>
            <div className="text-center">
              <div className="text-lg font-semibold text-purple-600 dark:text-purple-400">
                Q{journal.sjmr_quartile}
              </div>
              <div className="text-xs text-gray-500 dark:text-gray-400">
                SJMR Quartile
              </div>
            </div>
            {journal.article_processing_charge > 0 && (
              <div className="text-center">
                <div className="text-lg font-semibold text-orange-600 dark:text-orange-400">
                  ${journal.article_processing_charge}
                </div>
                <div className="text-xs text-gray-500 dark:text-gray-400">
                  Article Processing Charge
                </div>
              </div>
            )}
          </div>

          {/* Access Type and Publisher */}
          <div className="flex items-center justify-between text-sm">
            <div className="flex items-center space-x-3">
              <span className={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${
                journal.fully_open_access 
                  ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                  : journal.open_access_option
                  ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
                  : 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
              }`}>
                <GlobeIcon className="w-3 h-3 mr-1" />
                {journal.fully_open_access ? 'Open Access' : journal.open_access_option ? 'Hybrid' : 'Subscription'}
              </span>
              <span className="text-gray-600 dark:text-gray-300">
                by {publisher?.name} â€¢ {journal.average_review_time} days review time
              </span>
            </div>
          </div>

          {/* Actions */}
          <div className="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between">
            <div className="flex items-center space-x-4 text-sm text-gray-600 dark:text-gray-300">
              <span>Acceptance: {journal.acceptance_rate}%</span>
              <span>ISSN: {journal.issn_online}</span>
            </div>
              
            <div className="flex items-center space-x-2">
              <a
                href={journal.website}
                target="_blank"
                rel="noopener noreferrer"
                className="text-emerald-600 hover:text-emerald-700 text-sm font-medium flex items-center"
              >
                <EyeIcon className="w-4 h-4 mr-1" />
                Visit Journal
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default JournalsDirectoryPage;
